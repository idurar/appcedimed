
extends layout
include mixins/_doctorForm
include mixins/_searchForm
include mixins/_dataTable
include mixins/_information
include components/_infoHeader

block panelHeader
    - const searchAction = '/api/doctor/search?q='
    - const get = '/api/doctor/get/'
    - const read = '/api/doctor/read/'
    - const remove = '/api/doctor/delete/'
    - const titleColumn = 'name|surname'
    p.panelTitle #{title}
    .space-25
    .search-container
        +searchForm(searchAction,"doctor",titleColumn, read)


block panelBody
    .clearfix
    .panelContent.component(data-component="view-details" data-page="doctor")
        .panel-body.hidden
            +infoHeader(read, remove, "Doctor: ", titleColumn)
            .tab-content         
                .read
                    - const listInfo = [{key:'name',text:'Nom'},{key:'surname',text:'Nom de famille'},{key:'email',text:'Email'},{key:'department',text:'département'},{key:'position',text:'Position'},{key:'tel',text:'Téléphone'},{key:'enabled',text:'Activée'}]
                    +information(listInfo)
                .edit.hidden
                    +doctorForm('/api/doctor/', department, specialty)

block panelFooter                    
    .component(data-component="accordionForm")
        .accordionForm
            .accordionFormHeader 
                | Ajouter un nouveaux #{title}
                != h.icon('plus-circle') 
            .whiteBg
            .box
                +doctorForm('/api/doctor/', department, specialty)
        

block content
  .doctorPage    
    .model.modelSmall
        - const col = ['name', 'surname', 'email', 'specialty.name', 'tel']  
        - const limit = 20
        - const header = ['Nom', 'Prenom', 'Email', 'Specialty', 'Téléphone']
        +dataTable(header, get, read, remove, col, limit, "Doctors", titleColumn)

    