
extends layout
include mixins/_roleForm
include mixins/_searchForm
include mixins/_dataTable
include mixins/_information
include components/_infoHeader

block panelHeader
    - const searchAction = '/api/role/search?q='
    - const get = '/api/role/get/'
    - const read = '/api/role/read/'
    - const remove = '/api/role/delete/'
    - const titleColumn = 'name'
    p.panelTitle #{title}
    .space-25
    .search-container
        +searchForm(searchAction,"role",titleColumn, read)


block panelBody
    .clearfix
    .panelContent.component(data-component="view-details" data-page="role")
        .panel-body.hidden
            +infoHeader(read, remove, "Role: ", titleColumn)
            .tab-content         
                .read
                    - const listInfo = [{key:'name',text:'Nom'},{key:'description',text:'Description'},{key:'status',text:'En Service'}]
                    +information(listInfo)
                .edit.hidden
                    +roleForm('/api/role/')

block panelFooter                    
    .component(data-component="accordionForm")
        .accordionForm
            .accordionFormHeader 
                | Ajouter un nouveaux #{title}
                != h.icon('plus-circle') 
            .whiteBg
            .box
                +roleForm('/api/role/')

block content
    .rolePage    
        .model.modelSmall

            - const col = ['name', 'permissions', 'created']  
            - const limit = 20
            - const header = ['Nom', 'permissions', 'created']
            +dataTable(header, get, read, remove, col, limit, "Roles", titleColumn)
