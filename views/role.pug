
extends layout
include mixins/_roleForm
include components/_searchForm
include components/_dataTable
include components/_information
include components/_infoHeader

block panelHeader
    - const target = 'role'
    - const fields = 'name'
    - const displayFields = 'name'
    p.panelTitle #{title}
    .space-25
    .search-container
        +searchForm(target,fields,displayFields)


block panelBody
    .clearfix
    .panelContent.component(data-component="view-details" data-page="role")
        .panel-body.hidden
            +infoHeader( "Role: ", displayFields)
            .tab-content         
                .read
                    - const listInfo = [{key:'name',text:'Nom'},{key:'description',text:'Description'},{key:'status',text:'En Service'}]
                    +information(listInfo)
                .edit.hidden
                    +roleForm(target,"update")
                    

block panelFooter                    
    .component(data-component="accordionForm")
        .accordionForm
            .accordionFormHeader 
                | Ajouter un nouveaux #{title}
                != h.icon('plus-circle') 
            .whiteBg
            .box
                +roleForm(target,"create")

block content
    .rolePage    
        .model.modelSmall

            - const col = ['name', 'permissions', 'created']  
            - const limit = 20
            - const header = ['Nom', 'permissions', 'created']
            +dataTable(target,lists,col,items,"Roles", displayFields)
