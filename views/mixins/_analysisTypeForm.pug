
mixin analysisTypeForm(actionForm={})
    .component(data-component="ajaxForm")
        - const specialtys = specialty
        
        .alert-success.alert Successfully udated
        .alert-error.alert Oops there is error
        form.ajax(autocomplete="off" action=actionForm+"create/" data-add=actionForm+"create/" data-edit=actionForm+"update/" data-read=actionForm+"read/" method="POST")
            .loaderWarpper
                .loader

            .col-24.alpha.omega   
                label(for="name") Type d'analyse
                input(type="text" name="name" autocomplete="off")   
            .col-12.alpha   
                label(for="reference") Valeur optimal
                input(type="text" name="reference" autocomplete="off")   
            .col-12.omega    
                label(for="status") Disponiblite
                input(type="text" name="status" autocomplete="off")   
            .col-24.alpha.omega   
                label(for="description") Description
                textarea(name="description", rows="5" autocomplete="off")
            .col-24.alpha.omega   
                label(for="price") Tarif
                input(type="number" name="price" autocomplete="off" data-currency="DA")    
                                
            .clearfix
            .col-12.alpha    
                button(type="submit" class="save")  Enregistrer  
            .col-12.omega
                button(type="button" class="cancel")  Cancel  

        

