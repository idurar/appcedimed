
mixin mriScanTypeForm(target={},formState="create")
    .component(data-component="ajaxForm")  
        
        
        form.ajax(autocomplete="off" data-target=target  data-state=formState method="POST")
            
            
            .col-12.alpha  
                label(for="name") Name
                    abbr *
                input(type="text" required name="name" data-name="name"  autocomplete="off")
            .col-12.omega  
                label(for="reference") Reference
                input(type="text" name="reference" data-name="reference"  autocomplete="off")

            .col-24.alpha.omega
                label(for="description") Description
                    abbr *
                textarea(required name="description" data-name="description" autocomplete="off")

            .col-12.alpha
                label(for="name") Price
                input(type="text" name="price" data-name="price" autocomplete="off")

            .col-12.omega
                label(for="status") Statut
                select(name='status')
                    option(value='1') En Service
                    option(value='0') Demisioner


            .clearfix
            .col-12.alpha    
                button(type="submit" class="save")  Enregistrer      
            .col-12.omega
                button(type="button" class="cancel")  Cancel 
