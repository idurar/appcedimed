
mixin quoteForm(target={},formState="create", employees=[], currencies=[])

    .component(data-component="ajaxForm")  
        
        form.ajax(autocomplete="off" data-target=target  data-state=formState method="POST")
            

            .col-24.alpha.omega
                .col-12.alpha
                    label(for="number") Number
                    input(name="number" data-name="number" type="number")
                .col-12.omega
                    label(for="year") Year
                    input(name="year" data-name="year" type="text")
                
                .col-12.alpha
                    label(for="date") Date
                    input(name="date" data-name="date" class="datepicker" type="text")
                .col-12.omega
                    label(for="dateExpired") Date Expired
                    input(name="dateExpired" data-name="dateExpired" class="datepicker" type="text")

                .col-12.alpha
                    label(for="client") Employees
                    select(name='client' data-name="client")
                        each employee in employees
                            option(value=employee._id) #{employee.name}
                .col-12.omega
                    label(for="currency") Currency
                    select(name='currency' data-name="currency")
                        each currency in currencies
                            option(value=currency._id) #{currency.name}
                
                .col-12.alpha
                    label(for="total") Total
                    input(name="total" data-name="total" type="number")
                .col-12.omega
                    label(for="subTotal") Sub Total
                    input(name="subTotal" data-name="subTotal" type="number")

                .col-12.alpha
                    label(for="taxTotal") Tax Total
                    input(name="taxTotal" data-name="taxTotal" type="number")
                .col-12.omega
                    label(for="status") Statut
                    select(name='status')
                        option(value='1') En Service
                        option(value='0') Demisioner
                .clearfix
                .col-12.alpha    
                    button(type="submit" class="save")  Enregistrer      
                .col-12.omega
                    button(type="button" class="cancel")  Cancel 
