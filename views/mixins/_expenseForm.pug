include autocomplete/_supplierAutocomplete
include autocomplete/_orderFormAutocomplete
include autocomplete/_expenseCategoryAutocomplete
include autocomplete/_currencyAutocomplete

mixin expenseForm(actionForm={},search={})
    .component(data-component="ajaxForm")
        .alert-success.alert Successfully udated
        .alert-error.alert Oops there is error
        
        form.ajax(action=actionForm+"create/" data-add=actionForm+"create/" data-read=actionForm+"read/" data-edit=actionForm+"update/" method="POST")
            .loaderWarpper
                .loader

            .col-24.alpha.omega
                .col-24.alpha.omega
                    label(for="name") Name
                    input(type="text" name="name"  data-name="name" class="searchAjax" data-ajax=search autocomplete="off")

                .col-24.alpha.omega
                    label(for="description") Description
                    textarea(name="description", rows="5" autocomplete="off")

                .col-12.alpha
                    label(for="ref") Ref
                    input(name="ref" data-name="ref" type="text")
                
                .col-12.omega
                    label(for="supplier") Supplier
                    +supplierAutocomplete()

                .col-12.alpha
                    label(for="OrderForm") Order Form
                    +orderFormAutocomplete()
                .col-12.omega
                    label(for="expenseCategory") Expense Category
                    +expenseCategoryAutocomplete()

                .col-12.alpha
                    label(for="date") Date
                    input(name="date" data-name="date" class="datepicker" type="text")
                .col-12.omega
                    label(for="paymentMode") Payment Mode
                    input(name="paymentMode" data-name="paymentMode" type="text")
               
                .col-12.alpha
                    label(for="total") Total
                    input(name="total" data-name="total" type="number")
                .col-12.omega
                    label(for="subTotal") Sub Total
                    input(name="subTotal" data-name="subTotal" type="number")

                .col-12.alpha
                    label(for="taxTotal") Tax Total
                    input(name="taxTotal" data-name="taxTotal" type="number")
                .col-12.omega
                    label(for="currency") Currency
                    +currencyAutocomplete()
                
                .clearfix
                .col-12.alpha    
                    button(type="submit" class="save")  Enregistrer      
                .col-12.omega
                    button(type="button" class="cancel")  Cancel 