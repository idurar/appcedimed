
mixin taskForm(actionForm={},formNameClass="ajax")
    .component(data-component="ajaxForm")  
        .alert-success.alert Successfully udated
        .alert-error.alert Oops there is error

        form.ajax(action=actionForm+"create/" data-add=actionForm+"create/" data-edit=actionForm+"update/" method="POST")
            .loaderWarpper
                .loader

            .col-24.alpha.omega
                label(for="title") Title
                    abbr *
                input(type="text" required name="title" data-name="title" autocomplete="off")

            .col-24.alpha.omega
                label(for="description") Description
                    abbr *
                textarea(type="number" required name="description" data-name="description" autocomplete="off" rows="10")


            .col-24.alpha.omega
                label(for="completed") Statut
                select(name='completed')
                    option(value='0') Pending
                    option(value='1') Completed

            .clearfix
            .col-12.alpha    
                button(type="submit" class="save")  Enregistrer      
            .col-12.omega
                button(type="button" class="cancel")  Cancel 
