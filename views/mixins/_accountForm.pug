
mixin accountForm(actionForm={},formNameClass="ajax")
    .component(data-component="ajaxForm")
        
        .alert-success.alert Successfully udated
        .alert-error.alert Oops there is error
        form(class=formNameClass action=actionForm+"create/" data-add=actionForm+"create/" data-edit=actionForm+"update/" data-read=actionForm+"read/" method="POST")
            .loaderWarpper
                .loader
            .col-12.alpha
                label(for="name") Nom
                input(type="text" name="name" autocomplete="off")
            .col-12.omega    
                label(for="surname") Prenom
                input(type="text" name="surname" autocomplete="off")
            .col-12.alpha       
                label(for="email") Email
                input(type="email" name="email" autocomplete="off")
            .col-12.omega    
                label(for="accountType") Compte
                select(name='accountType' )
                    option(value="Doctor") Doctor
                    option(value="Employee") Employee
            .col-24.alpha.omega
                label(for="dashboardType") Dashbaord
                select(name='dashboardType')
                    option(value='management') Management
                    option(value='Secrtariat') Secrtariat
                    option(value='Doctor') Doctor
                    
            
            .clearfix
            .col-12.alpha    
                button(type="submit" class="save")  Enregistrer      
            .col-12.omega
                button(type="button" class="cancel")  Cancel 
