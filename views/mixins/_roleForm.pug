
mixin roleForm(actionForm={})
    .component(data-component="ajaxForm")  
        .alert-success.alert Successfully udated
        .alert-error.alert Oops there is error
        form.ajax(action=actionForm+"create/" data-add=actionForm+"create/" data-edit=actionForm+"update/" data-read=actionForm+"read/" method="POST")
            .loaderWarpper
                .loader

            .col-24.alpha.omega
                label(for="name") Nom du User
                input(type="text" name="name" data-name="name" autocomplete="off")
        
            .col-24.alpha.omega
                label(for="permissions") Permissions
                select(name='permissions' data-name="status")
                    option(value='0') All
                    option(value='1') View only
                    option(value='2') Write

            .clearfix
            .col-12.alpha    
                button(type="submit" class="save")  Enregistrer      
            .col-12.omega
                button(type="button" class="cancel")  Cancel 
