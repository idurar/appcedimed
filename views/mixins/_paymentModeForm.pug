
mixin paymentModeForm(actionForm={})
    .component(data-component="ajaxForm")   
        .alert-success.alert Successfully udated
        .alert-error.alert Oops there is error
        
        form.ajax(action=actionForm+"create/" data-add=actionForm+"create/" data-edit=actionForm+"update/" data-read=actionForm+"read/" method="POST")
            .loaderWarpper
                .loader

            .col-24.alpha.omega
                .col-24.alpha.omega
                    label(for="name") Name
                    input(name="name" data-name="name" type="text")
                
                .col-24.alpha.omega
                    label(for="description") Description
                    textarea(required name="description" data-name="description" autocomplete="off")
                
                .col-24.alpha.omega
                    label(for="enabled") Activ√©e
                    select(name='enabled')
                        option(value='true') Oui
                        option(value='false') Non
            
                .clearfix
                .col-12.alpha    
                    button(type="submit" class="save")  Enregistrer      
                .col-12.omega
                    button(type="button" class="cancel")  Cancel 