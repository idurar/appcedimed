
mixin clientForm(target={},formState="create")

    .component(data-component="ajaxForm")  
        
        
        form.ajax(autocomplete="off" data-target=target  data-state=formState method="POST")
            

            .col-24.alpha.omega
                .col-24.alpha.omega
                    label(for="company") Company
                    input(type="text" name="company"  data-name="company" autocomplete="off")

                .col-12.alpha
                    label(for="managerName") Manager Name
                    input(name="managerName" data-name="managerName" type="text" autocomplete="off")
                .col-12.omega
                    label(for="managerSurname") Manager Surname
                    input(name="managerSurname" data-name="managerSurname" type="text" autocomplete="off")

                .col-12.alpha
                    label(for="email") Email
                    input(name="email" data-name="email" type="email")
                .col-12.omega
                    label(for="phone") Telephone
                    input(name="phone" data-name="phone" type="text")

                .col-12.alpha
                    label(for="cell") Mobile
                    input(name="cell" data-name="cell" type="text")
                .col-12.omega
                    label(for="fax") Fax
                    input(name="fax" data-name="fax" type="text")
                .col-24.alpha.omega
                    label(for="website") Website
                    input(name="website" data-name="website" type="text")

                .col-24.alpha.omega
                    label(for="bankAccount") Bank Account
                    input(name="bankAccount" data-name="bankAccount" type="text")
               
                .col-12.alpha
                    label(for="companyRegNumber") Company Reg Number
                    input(name="companyRegNumber" data-name="companyRegNumber" type="text")
                .col-12.omega
                    label(for="companyTaxNumber") Company Tax Number
                    input(name="companyTaxNumber" data-name="companyTaxNumber" type="text")

                .col-24.alpha.omega
                    label(for="companyTaxId") Company Tax Id
                    input(name="companyTaxId" data-name="companyTaxId" type="text")

                .col-24.alpha.omega
                    label(for="country") country
                    input(name="country" value="Algeria" autocomplete="off")
                .col-24.alpha.omega
                    label(for="address") Address
                    textarea(name="address", rows="5" autocomplete="off")                    

                .clearfix
            
                .col-12.alpha    
                    button(type="submit" class="save")  Enregistrer  
                .col-12.omega
                    button(type="button" class="cancel")  Cancel  



