include autocomplete/_patinetAutocomplete
include autocomplete/_consultationAutocomplete
include autocomplete/_doctorAutocomplete

mixin prescriptionForm(actionForm={})
    .component(data-component="ajaxForm")  
        .alert-success.alert Successfully udated
        .alert-error.alert Oops there is error

        form.ajax(action=actionForm+"create/" data-add=actionForm+"create/"  data-read=actionForm+"read/" data-edit=actionForm+"update/" method="POST")
            .loaderWarpper
                .loader

            .col-24.alpha.omega  
                label(for="patient") Consultation
                +consultationAutocomplete()

            .col-24.alpha.omega  
                label(for="patient") Patient
                +patinetAutocomplete()

            .col-24.alpha.omega  
                label(for="patient") Doctor
                +doctorAutocomplete()

            .col-12.alpha
                label(for="number") Type
                    abbr *
                input(type="string" required name="type" data-name="type" autocomplete="off")

            .col-12.omega
                label(for="client") Letter
                input(type="string" required name="type" data-name="type" autocomplete="off")


            .clearfix
            .col-12.alpha    
                button(type="submit" class="save")  Enregistrer      
            .col-12.omega
                button(type="button" class="cancel")  Cancel 
