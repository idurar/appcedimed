
mixin expenseCategoryForm(actionForm={})
    .component(data-component="ajaxForm")  
        .alert-success.alert Successfully udated
        .alert-error.alert Oops there is error
        
        form.ajax(action=actionForm+"create/" data-add=actionForm+"create/" data-read=actionForm+"read/"  data-edit=actionForm+"update/" method="POST")
            .loaderWarpper
                .loader
          
            .col-24.alpha.omega    
                label(for="name") Nom
                input(type="text"  name="name"  data-name="name" autocomplete="off") 

            .col-24.alpha
                label(for="description") La description
                textarea(name="description" rows="5" data-name="description" autocomplete="off")

            .col-24.alpha.omega    
                label(for="enabled") Activ√©e
                select(name='enabled')
                    option(value='true') Oui
                    option(value='false') Non

            .clearfix
            .col-12.alpha    
                button(type="submit" class="save")  Enregistrer      
            .col-12.omega
                button(type="button" class="cancel")  Cancel 