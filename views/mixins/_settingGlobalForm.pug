
mixin settingGlobalForm(target={},formState="create")

    .component(data-component="ajaxForm")
        
        form.ajax(autocomplete="off" data-target=target  data-state=formState method="POST")
            

            .col-24.alpha.omega
                label(for="name") Name
                input(type="text" name="name" autocomplete="off")
            
            .col-24.alpha.omega
                label(for="value") Value
                input(type="text" name="value" autocomplete="off")
            
            .col-24.alpha.omega
                label(for="tableName") TableName
                input(type="text" name="tableName" autocomplete="off")
                       
            .col-24.alpha.omega
                label(for="relationID") Relation ID
                input(type="text" name="relationID" autocomplete="off")

            .col-24.alpha.omega
                label(for="enabled") Activ√©e
                select(name='enabled')
                    option(value='true') Oui
                    option(value='false') Non
            
            .clearfix
            .col-12.alpha    
                button(type="submit" class="save")  Enregistrer      
            .col-12.omega
                button(type="button" class="cancel")  Cancel 
