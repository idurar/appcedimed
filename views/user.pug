
extends layout
include mixins/_userForm
include components/_searchForm
include components/_dataTable
include components/_information
include components/_infoHeader

block panelHeader
    - const target = 'user'
    - const fields = 'name'
    - const displayFields = 'name'
    p.panelTitle #{title}
    .space-25
    .search-container
        +searchForm(target,fields,displayFields)


block panelBody
    .clearfix
    .panelContent.component(data-component="view-details" data-page="user")
        .panel-body.hidden
            +infoHeader( "User: ", displayFields)
            .tab-content
                .read
                    - const listInfo = [{key:'name',text:'Nom'},{key:'email',text:'email'},{key:'enabled',text:'Compte Active'}]
                    +information(listInfo)
                .edit.hidden
                    +userForm(target,"update")

block panelFooter                    
    .component(data-component="accordionForm")
        .accordionForm
            .accordionFormHeader 
                | Ajouter un nouveaux #{title}
                != h.icon('plus-circle') 
            .whiteBg
            .box
                +userForm(target,"create")

block content
    .userPage    
        .model.modelSmall

  
            - const col = ['name', 'surname','email','role']  
            - const limit = 20
            - const lists = ['Nom','Prenom', 'Email','Role']
            +dataTable(target,lists,col,items,"Users", displayFields)
