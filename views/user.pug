
extends layout
include mixins/_userForm
include mixins/_searchForm
include mixins/_dataTable
include mixins/_information
include components/_infoHeader

block panelHeader
    - const searchAction = '/api/user/search?q='
    - const get = '/api/user/get/'
    - const read = '/api/user/read/'
    - const remove = '/api/user/delete/'
    - const titleColumn = 'name'
    p.panelTitle #{title}
    .space-25
    .search-container
        +searchForm(searchAction,"user",titleColumn, read)


block panelBody
    .clearfix
    .panelContent.component(data-component="view-details" data-page="user")
        .panel-body.hidden
            +infoHeader(read, remove, "User: ", titleColumn)
            .tab-content
                .read
                    - const listInfo = [{key:'name',text:'Nom'},{key:'description',text:'Description'},{key:'status',text:'En Service'}]
                    +information(listInfo)
                .edit.hidden
                    +userForm('/api/user/')

block panelFooter                    
    .component(data-component="accordionForm")
        .accordionForm
            .accordionFormHeader 
                | Ajouter un nouveaux #{title}
                != h.icon('plus-circle') 
            .whiteBg
            .box
                +userForm('/api/user/')

block content
    .userPage    
        .model.modelSmall
            - const col = ['name', 'email','role']  
            - const limit = 20
            - const header = ['Nom', 'Email','Role']
            +dataTable(header, get, read, remove, col, limit, "Users", titleColumn)
