
mixin invoiceGrid(props={})
    - const targetInvoice=props.targetInvoice ||  "invoice"
    - const title= props.title || "" 
    .component(data-component="invoiceGrid" data-target-invoice=targetInvoice)      
        form(data-status="new" method="POST")
            
            .orgdropdown.hidden
                .toggle
                    != h.icon("more")
                    ul.toggleOption
                        li.edit
                            != h.icon("option-edit") 
                            | Modifier
                        li.remove
                            != h.icon("delete-trash") 
                            | Supprimer
            .page-container
                .page-header
                    .page-title=title
                    .meta-table-actions
                .line

                .page-content-container
                    .content-row
                        .col-12
                            label(for="client") Client
                            input(type="text" name="client" autocomplete="off")
                        .col-4
                            label(for="name") numéro de facture
                            input(type="text" name="name" autocomplete="off")
                        .col-4
                            label(for="recurring") facture récurrente
                            select(name='recurring')
                                option(value='None') None
                                option(value='Val1') Val1
                        .col-4
                            label(for="devise") Devise
                            select(name='devise')
                                option(value='DA') DA
                                option(value='USD') USD    
                                option(value='PKR') PKR 
                    .content-row
                        .col-5
                            label(for="invoice_date") Date de la Facture
                            input(class="datepicker" type="text" name="invoice_date" autocomplete="off")
                        .col-5
                            label(for="due_date") Date d'échéance
                            input(class="datepicker" type="text" name="due_date" autocomplete="off")
                        .col-10
                            label(for="admmin_note") Note Admin
                            input(type="text" name="admmin_note" autocomplete="off")
                .space-15
                .line

                .page-content-container.pt-0
                    .content-row
                        .col-4
                            label(for="designation") Designaiton
                            input(type="text" name="designation" autocomplete="off")
                        .col-6
                            label(for="description") Description
                            input(type="text" name="description" autocomplete="off")
                        .col-3
                            label(for="qte") Qte
                            input(type="text" name="qte" autocomplete="off")
                        .col-4
                            label(for="price_unit") Prix unitaire
                            input(type="text" name="price_unit" autocomplete="off")
                        .col-5
                            label(for="amount") Montant
                            input(type="text" name="amount" autocomplete="off")
                        .col-2
                            button(type="button" class="icon-plus-btn plus-btn")!= h.icon('plus-circle') 



                    .content-row.calculation-row
                        .col-4
                            span Designaiton
                        .col-6
                            span Description
                        .col-3
                            span 10
                        .col-4
                            span 250 000
                        .col-6
                            span 2 500 000
                        .col-1
                            //- button(type="button" class="icon-plus-btn plus-btn")
                            != h.icon("more")

                    .content-row
                        .col-13
                            .action-buttons
                                .col-8
                                    button(type="submit" class="btn primary-btn icon-btn") Enregister
                                        != h.icon('check-circle') 
                                .col-8
                                    button(type="submit" class="btn secondary-btn icon-btn") Enregistrer & Envoyer
                                        != h.icon('check-circle') 
                        .col-11
                            .total-row
                                .col-9.padding-no
                                    | total H.T
                                .col-15.space-adj
                                    | 2 500 000 DA
                            .total-row
                                .col-9.padding-no
                                    select(name='tva')
                                        option(value='zero') T.V.A: 0 %
                                        option(value='one') T.V.A: 1 %
                                        option(value='two') T.V.A: 2 %
                                .col-15.space-adj
                                    | 00 DA

                            .total-row
                                .col-9.padding-no
                                    | total TTC
                                .col-15.space-adj
                                    | 2 500 000 DA
