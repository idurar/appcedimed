    .component(data-component="consultationInfo" )
        .tab-container.headerInfo
            .single-item.meta-title-row
                .item-row
                    .item-data(data-patientId="")
                        | ID: 1 820219 99 190502 0
                    .item-data(data-patientName="")
                        | M. Sehnoun Sophian
        .template.hidden
            .single-item.prescriptionItem
                .item-row
                    .item-data
                        != h.icon('heart')
                        span(data-prescriptionNbr="")
                            | Ordonnance # 1
                    .item-data-2
                        != h.icon('date-icon')
                        span(data-prescriptionDate="")
                            | 16/08/2018
                .moreOption
                    .toggle
                        != h.icon("more")
                        ul.toggleOption
                            li.download(data-path='/download/Prescription/prescription-report')
                                != h.icon("option-edit") 
                                | Telecharger
                            li.edit
                                != h.icon("option-edit") 
                                | Modifier
                            li.remove
                                != h.icon("delete-trash") 
                                | Supprimer

            .single-item.report
                .item-row
                    .item-data
                        != h.icon('consult-report')
                        span(data-reportnbr="")
                            | Compte Rendu # 1
                    .item-data-2
                        != h.icon('date-icon')
                        span(data-reportdate="")
                            | 16/08/2018
                .moreOption.list-more-option
                    .toggle
                        != h.icon("more")
                        ul.toggleOption
                            li.playPushButton.component(data-component="audio-player-toggle")
                                span.play
                                    != h.icon("play") 
                                    | Play
                                span.pause.hidden
                                    != h.icon("pause") 
                                    | Paush

                            li.remove(data-label=title)
                                != h.icon("delete-trash") 
                                a(href="#delete-record") Supprimer


        .tab-container
            .prescriptionItemList

            .reportItemList(data-targetrecoder=targetRecoder data-remove-action=removeAudioRecord)

            .recordingList(data-targetrecoder=targetRecoder)
                .single-item.template.hidden
                    .item-row
                        .item-data
                            != h.icon('consult-report')
                            span(data-property="name")
                        .item-data-2
                            != h.icon('date-icon')
                            span(data-property="created" data-type="datetime")
                    .moreOption.list-more-option
                        .toggle
                            != h.icon("more")
                            ul.toggleOption
                                li.playPushButton.component(data-component="audio-player-toggle")
                                    span.play
                                        != h.icon("play") 
                                        | Play
                                    span.pause.hidden
                                        != h.icon("pause") 
                                        | Paush

                                li.remove(data-label=title)
                                    != h.icon("delete-trash") 
                                    a(href="#delete-record") Supprimer

                .upload-progress

            .space
            .content-row
                .col-24
                    .action-buttons
                        .col-12.alpha
                            button(id="newPrescription" type="submit" class="btn primary-btn icon-btn") Ajouter un Ordonnance
                                != h.icon('plus-circle') 
                        .col-12.omega
                            button(type="submit" class="btn secondary-btn icon-btn component" data-component="recorder-toggle" data-targetrecoder=targetRecoder data-list-selector=".recordingList") Ajouter Compte Rendue
                                != h.icon('consult-report') 



