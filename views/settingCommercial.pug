extends layout 
include mixins/_settingCommercialForm
include components/_searchForm
include components/_dataTable
include components/_information
include components/_infoHeader


block panelHeader
    - const target = 'settingCommercial'
    - const fields = 'name'
    - const displayFields = 'name'
    p.panelTitle #{title}
    .space-25
    .search-container
        +searchForm(target,fields,displayFields)

block panelBody
    .clearfix
    .panelContent.component(data-component="view-details" data-page="settingCommercial")
        .panel-body.hidden
            +infoHeader( "Setting: ", displayFields)
            .tab-content         
                .read
                    - const listInfo = [{key:'name',text:'Name'},{key:'value',text:'Value'},{key:'tableName',text:'Table Name'},{key:'relationID',text:'Relation ID'}]
                    +information(listInfo)
                .edit.hidden
                    +settingCommercialForm(target,"update")
                    

block panelFooter                    
    .component(data-component="accordionForm")
        .accordionForm
            .accordionFormHeader 
                | Ajouter un nouveaux #{title}
                != h.icon('plus-circle') 
            .whiteBg
            .box
                +settingCommercialForm(target,"create")

block content 
  .model.modelSmall
    
    - const col = ['name', 'value', 'tableName', 'relationID']
    - const header = ['Name', 'Value', 'Table Name', 'Relation ID']
    - const limit = 20
    +dataTable(target,lists,col,items,"Globals Setting", displayFields)
