extends layout 
include mixins/_quoteForm
include mixins/_searchForm
include mixins/_dataTable
include mixins/_information
include components/_infoHeader

block panelHeader
    - const searchAction = '/api/quote/search?q='
    - const get = '/api/quote/get/'
    - const read = '/api/quote/read/'
    - const remove = '/api/quote/delete/'
    - const titleColumn = 'number'
    p.panelTitle #{title}
    .space-25
    .search-container
        +searchForm(searchAction,"quote",titleColumn, read)


block panelBody
    .clearfix
        .panelContent.component(data-component="view-details" data-page="quote")
            .panel-body.hidden
                +infoHeader(read, remove, "Quote: ", titleColumn)
                .tab-content         
                    .read
                        - const listInfo = [{key:'number',text:'Number'},{key:'date',text:'Date'},{key:'client',text:'Client'},{key:'dateExpired',text:'Expired Date'},{key:'currency',text:'Unit√©'},{key:'total',text:'Total'}]
                        +information(listInfo)
                    .edit.hidden
                        +quoteForm('/api/quote/', employees, currencies)

block panelFooter                    
    .component(data-component="accordionForm")
        .accordionForm
            .accordionFormHeader 
                | Ajouter un nouveaux #{title}
                != h.icon('plus-circle') 
            .whiteBg
            .box
                +quoteForm('/api/quote/', employees, currencies)

block content 
    .model.modelSmall
        - const col = ['number', 'date', 'client', 'dateExpired', 'total']
        - const header = ['Number', 'Date', 'Client', 'Expired Date', 'Total']
        - const limit = 20
        +dataTable(header, get, read, remove, col, limit, "Quote", titleColumn)
