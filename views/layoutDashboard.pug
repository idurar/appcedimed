include components/_navMenu

doctype html
html
  head
    title= `${title} | ${h.siteName}`
    link(rel='stylesheet', href='/dist/style.css')
    link(rel="shortcut icon" type="image/png" href="/images/icons/favicon.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
      block loginPage
      

      nav
          .nav-container
            a.link_logo(href="/")
              .logo
                  != h.icon('logo')
                  .alphabetic-logo
                      img.logo-text-only(src=`/images/photos/logo_text_only.png`)
            +navMenu()

      .panelButton.showSideBar.hide
        != h.icon('menu')


      .component.top-navbar(data-component="headerNav")
        .headerNav
            .nav-options
                != h.icon('nav-options')
                .hoverable-container
                  .hovered-content
                    a(href="#") This is test descs
