                    a(href="#") Hey, Happy Ramazan
            .bell-notification
                .area-hoverable!= h.icon('bell-notification')
                .hoverable-container
                  .hovered-content
                    a(href="#") You have 5 more tasks
                    a(href="#") Your friend is in town
                    a(href="#") Azhar responded to email
                    a(href="#") You have 5 more tasks
                    a(href="#") Your friend is in town
                    a(href="#") Azhar responded to email
            .nav-profile
                img.profile-img(src=h.staffPhotoUrl(staff))
                .hoverable-container
                  .hovered-content
                    a(href="#") Profile
                    a(href="#") Settings
                    a(href="#") Logout
              
      .dashboard
            block content

      block scripts
         script(src="/dist/App.bundle.js")
   
   
