  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
div.row
    each  permission in permissions
            .col-4
             if (permissionsArrayIds.includes(permission._id))
                .custom-control.custom-checkbox
                    input.custom-control-input(type='checkbox' checked="true" value=permission._id id=permission._id)
                    label.custom-control-label(for=permission._id class=permission._id) #{permission.name}
             else
                .custom-control.custom-checkbox
                    input.custom-control-input(type='checkbox' value=permission._id id=permission._id)
                    label.custom-control-label(for=permission._id class=permission._id) #{permission.name}
div.row
 input(hidden, id="userId" value=user._id ) 
.col-12(style="text-align:center")
 <button id="updateBtn">UPDATE PERMISSIONS</button>
    <form action="/permissions/users/update" method="post" id="myForm" style="display:none">
        <input type="text"  value="" name="permissions" id="permissions">
         <input type="text" value="" name="user" id="user">
    </form>

script.     
    $(document).ready(function() {
            $('#updateBtn').on('click',function(){
                var permissions = []
                $( "input:checked" ).each(function( index ) {
                     permissions.push($( this ).attr("value"))
                     });
                     $('#permissions').attr('value', permissions)
                     $('#user').attr('value',$('#userId').attr('value'))
                     $('#myForm').submit()
            })
    });